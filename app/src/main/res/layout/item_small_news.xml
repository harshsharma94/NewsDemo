<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/grid_1_half">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.constraint.Guideline
                android:id="@+id/guideImage"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <ImageView
                android:id="@+id/imageSmall"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/guideImage"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/grid_2"
                tools:src="@android:color/holo_blue_bright"/>

        <TextView
                android:id="@+id/textTitleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textDescLarge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideImage"
                android:layout_margin="@dimen/grid_2"
                android:textSize="@dimen/font_xlarge"
                android:maxLines="3"
                android:ellipsize="end"
                android:textStyle="bold"
                tools:text="Some News Title"/>

        <TextView
                android:id="@+id/textDescSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textTitleSmall"
                app:layout_constraintBottom_toBottomOf="@id/textAuthorSmall"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/guideImage"
                android:layout_margin="@dimen/grid_2"
                android:textSize="@dimen/font_small"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Some News Description"/>

        <TextView
                android:id="@+id/textAuthorSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideImage"
                app:layout_constraintTop_toBottomOf="@id/textDescSmall"
                android:layout_margin="@dimen/grid_2"
                android:textSize="@dimen/font_xsmall"
                android:maxLines="1"
                tools:text="Some News Description"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>